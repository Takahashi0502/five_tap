<h2><%= link_to @beer.name, beer_path(@beer) %></h2>
<div>
  <h3><%= @review.user.nickname %></h3>
  コメント：<%= @review.content %><br>
  <% if @review.images.attached? %>
    <% @review.images.each do |image| %>
      <%= image_tag image.variant(resize:'150x150') %>
    <% end %><br>
  <% end %>
  タグ：
  <% @review.tags.each do |tag| %>
    <%= tag.name %><br>
  <% end %>
</div>

<% if user_signed_in? %>
  <% if @review.liked_by?(current_user) %>
    <p><span>いいね済み</span><%= link_to @review.likes.count, review_like_path(@review.id), method: :delete %></p>
  <% else %>
    <p><span>いいね</span><%= link_to @review.likes.count, review_like_path(@review.id), method: :post %></p>
  <% end %>
<% end %>
<div>
  <% @comments.each do |comment| %>
    <p>
      <%= comment.user.nickname %>
      <%= comment.content %>
    </p>
  <% end %>
</div>
<%= form_with model:@comment, url: review_comments_path(@review) do |f| %>
  <%= f.label :content %>する
  <%= f.text_field :content %>

  <%= f.submit 'コメントする' %>
<% end %>

<%= link_to 'ビール詳細に戻る', beer_path(@beer) %>