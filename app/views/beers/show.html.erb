<div class="wrapper">
  <div class="container">
    <div class="main-beer">
      <div class="left-beer">
        <h2 class="beer-name"><%= @beer.name %></h2>
        <%= show_beerimage(@beer) %>
        <div class="beer_likes" id="beer_likes_bottons_<%= @beer.id %>">
          <%= render partial: 'shared/beer_like', locals: { beer: @beer } %>
        </div>
      </div>
      <div class="right-beer">
        <p class="item-info"><span>カテゴリー</span><%= @beer.category.name %></p>
        <p class="item-info"><span>スタイル</span><%= @beer.style.name %></p>
        <p class="item-info"><span>商品ページ</span><%= @beer.url %></p>
        <p class="item-info"><span>メーカー</span><%= @beer.brewery_name %></p>
        <p class="item-info"><span>生産国</span><%= @beer.brewery_country.name %></p>
        <p class="item-info"><span>タグ</span>
        <% @reviews.each do |review| %>
          <% review.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
        <% end %>
        </p>
        <p class="item-info"><span>コメント</span><%= @beer.text %></p>
        <% if user_signed_in? %>
          <p>
            <%= link_to '情報を編集する', edit_beer_path(@beer) %>
            <%= link_to '削除する', beer_path(@beer), method: :delete %>
          </p>
        <% end %>
        <%= link_to "ビア活を投稿", new_beer_review_path(@beer) %>
      </div>
    </div>

      <div class="main-reviews">
        <h4 class="main-title">ビア活一覧</h4>
        <% @reviews.each do |review| %>
          <div class="review">
            <div class="left-field">
              <%= show_avatar(review.user) %>
            </div>
            <div class="right-field">
              <p><%= link_to review.user.nickname, user_path(review.user), class: "user-name" %></p>
              <%= link_to review_path(review.id) do %>
                <span class="date"><%= review.created_at.to_s(:date_jp) %></span>
                <p class="review-body"><%= review.content %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

  </div>
</div>