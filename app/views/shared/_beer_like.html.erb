<% if beer.favorited_by?(current_user)%>
  <p><span>お気に入り解除</span><%= link_to beer.favorites.count, beer_favorite_path(beer.id), method: :delete, remote: true %></p>
<% else %>
  <p><span>お気に入り登録</span><%= link_to beer.favorites.count, beer_favorite_path(beer.id), method: :post, remote: true %></p>
<% end %>