<% if user_signed_in? %>
  <% if review.liked_by?(current_user) %>
    <%= link_to review_like_path(review.id), method: :delete, remote: true do %>
      <i class="fas fa-heart unlike-btn">
        <span class="like-count"><%= review.likes.count %></span>
      </i>
    <% end %>
  <% else %>
    <%= link_to review_like_path(review.id), method: :post, remote: true do %>
      <i class="far fa-heart like-btn">
        <span class="like-count"><%= review.likes.count %></span>
      </i>
    <% end %>
  <% end %>
<% end %>