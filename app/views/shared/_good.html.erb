<% if user_signed_in? %>
  <% if comment.gooding_by?(current_user) %>
    <%= link_to comment_good_path(comment.id), method: :delete, remote: true do %>
      <i class="fas fa-heart unlike-btn">
        <span class="like-count"><%= comment.goods.count %></span>
      </i>
    <% end %>
  <% else %>
    <%= link_to comment_good_path(comment.id), method: :post, remote: true do %>
      <i class="far fa-heart like-btn">
        <span class="like-count"><%= comment.goods.count %></span>
      </i>
    <% end %>
  <% end %>
<% end %>